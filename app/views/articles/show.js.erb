$("#modal .content").ready(function() {		
	$.fancybox(
		{
			'autoDimensions' : true,
			<!-- 'height' : $('.fancybox_article').height, -->
			<!-- 'width' : 620, -->
			<!-- 'margin' : 50, -->
			'padding'	: 75,
			'overlayColor'		: '#000',
			'overlayOpacity'	: 0.9,
			'onComplete' : function() {
				$("html, body").css("overflow", "hidden");
			},
			'onClosed' : function() {
				$("html, body").css("overflow", "auto");
			},
			
			'content' : "<%= escape_javascript(render(:partial => "show"))%>"

		}
	);
});
		
		