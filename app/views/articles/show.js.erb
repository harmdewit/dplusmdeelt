$("#modal .content").ready(function() {		
	$.fancybox(
		{
			'autoDimensions' : false,
			'height' : "100%",
			'width' : 620,
			'margin' : 50,
			'padding'	: 75,
			'overlayColor'		: '#000',
			'overlayOpacity'	: 0.9,
			'onComplete' : function() {
				$("html, body").css("overflow", "hidden");
			},
			'onClosed' : function() {
				$("html, body").css("overflow", "auto");
			},
			
			'content' : "<%= escape_javascript(render(:partial => "show"))%>"

		}
	);
});
		
		