.fancybox_article
	
	.share_buttons
		%iframe{:allowTransparency => "true", :frameborder => "0", :scrolling => "no", :src => "http://www.facebook.com/plugins/like.php?href=#{root_url}magazine/post/tumblr/#{@article.post.service_post_id}&send=true&layout=standard&width=450&show_faces=true&action=like&colorscheme=light&font&height=80", :style => "border:none; overflow:hidden; width:200px; height:30px;"}
		%a.twitter-share-button{"data-count" => "horizontal", "data-text" => @article.title, "data-url" => "#{root_url}magazine/post/tumblr/#{@article.post.service_post_id}", "data-via" => "#{Configuration.twitter_username}", :href => "http://twitter.com/share"} Tweet
		%script{:src => "http://platform.twitter.com/widgets.js", :type => "text/javascript"}
	%h1= @article.title
	= link_to(@article.post.link_to_post, :class => 'metadata') do
		- date = Time.parse(@article.post.date_created).strftime("%d/%m at %H:%M")
		- case @article.post.service
		- when 'facebook'
			- service_image = image_tag('social_media_logos/facebook_32.png')
		-	when 'twitter'
			- service_image = image_tag('social_media_logos/twitter_32.png')
		- when 'tumblr'
			- service_image = image_tag('social_media_logos/tumblr_32.png')
		!= "#{service_image} Gedeeld met Tumblr op #{date}"
	%br
	%br
	%br
	%br
	

	
	

