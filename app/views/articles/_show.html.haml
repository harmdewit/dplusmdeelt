
%h1= @article.title
= link_to(@article.post.link_to_post, :class => 'metadata') do
	- date = Time.parse(@article.post.date_created).strftime("%d/%m at %H:%M")
	- case @article.post.service
	- when 'facebook'
		- service_image = image_tag('social_media_logos/facebook_32.png')
	-	when 'twitter'
		- service_image = image_tag('social_media_logos/twitter_32.png')
	- when 'tumblr'
		- service_image = image_tag('social_media_logos/tumblr_32.png')
	!= "#{service_image} Gedeeld met Tumblr op #{date}"
	%br
	%br
!= @article.original_body
%iframe{:allowTransparency => "true", :frameborder => "0", :scrolling => "no", :src => "http://www.facebook.com/plugins/like.php?href=#{@article.post.link_to_post}&send=true&layout=standard&width=450&show_faces=true&action=like&colorscheme=light&font&height=80", :style => "border:none; overflow:hidden; width:450px; height:80px;"}
%a.twitter-share-button{"data-count" => "horizontal", "data-text" => @article.title, "data-url" => "#{@article.post.link_to_post}", "data-via" => "hdwtest1", :href => "http://twitter.com/share"} Tweet
%script{:src => "http://platform.twitter.com/widgets.js", :type => "text/javascript"}
#disqus_thread
:javascript
	var disqus_developer = 1;
	/* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
	var disqus_shortname = 'hdwtest1'; // required: replace example with your forum shortname

	// The following are highly recommended additional parameters. Remove the slashes in front to use.
	var disqus_identifier = "#{@article.post.service_post_id}";
	var disqus_url = '#{@article.post.link_to_post}';

	/* * * DON'T EDIT BELOW THIS LINE * * */
	(function() {
			var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
			dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
			(document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
	})();
